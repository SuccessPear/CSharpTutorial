<?xml version="1.0" encoding="utf-8"?>
<Window x:ConnectionId='1'
    x:Class="ConsoleApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ConsoleApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel.Resources>
            <DataTemplate x:Key="ListViewItemTemplate"                      >
                <StackPanel x:ConnectionId='3' Orientation="Horizontal">
                    <CheckBox/>
                    <TextBlock x:ConnectionId='4'                            />
                </StackPanel>
            </DataTemplate>
        </StackPanel.Resources>
        <Button x:ConnectionId='5' 
            x:Name="myButton" 
                                                  
            CommandParameter="{Binding Text, ElementName=AddNameTextBox}"
                                                                   />
        <TextBox x:ConnectionId='6'
            x:Name="AddNameTextBox"
                                                                 />
        <ItemsRepeater x:ConnectionId='7'
            x:Name="ListOfStudents"
            ItemTemplate="{StaticResource ListViewItemTemplate}"
                                                                     />

    </StackPanel>
</Window>

